---
export interface Props {
  texts: string[];
  className?: string;
}

const { texts, className = "" } = Astro.props;
---

<div class="relative inline-block">
  <span data-typewriter-text data-texts={JSON.stringify(texts)} class={className}></span>
  <span data-typewriter-cursor class="ml-0.5 font-bold text-blue-400">|</span>
</div>

<script>
  import { initTypewriterAnimation } from "@animations/typewriter";

  document.addEventListener("astro:page-load", () => {
    initTypewriterAnimation();
  });
</script>
