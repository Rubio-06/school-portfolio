---
interface HeadingProps {
  level?: 1 | 2 | 3 | 4 | 5 | 6;
}

const { level = 1 } = Astro.props as HeadingProps;
---

{
  level === 1 && (
    <h1 class="my-4 text-4xl font-bold">
      <slot />
    </h1>
  )
}
{
  level === 2 && (
    <h2 class="my-4 text-3xl font-bold">
      <slot />
    </h2>
  )
}
{
  level === 3 && (
    <h3 class="my-4 text-2xl font-bold">
      <slot />
    </h3>
  )
}
{
  level === 4 && (
    <h4 class="my-4 text-xl font-bold">
      <slot />
    </h4>
  )
}
{
  level === 5 && (
    <h5 class="my-4 text-lg font-bold">
      <slot />
    </h5>
  )
}
{
  level === 6 && (
    <h6 class="my-4 text-base font-bold">
      <slot />
    </h6>
  )
}
