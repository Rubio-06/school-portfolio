---
import BaseLayout from "@components/layouts/BaseLayout.astro";
import Link from "@components/ui/Link.astro";
import { type CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
const { Content } = await project.render();

const categoryLabels = {
  scolaire: "Projet Scolaire",
  personnel: "Projet Personnel",
};

const categoryGradients = {
  scolaire: "from-blue-500/20 to-blue-600/20 border-blue-500/30",
  personnel: "from-purple-500/20 to-purple-600/20 border-purple-500/30",
};

const categoryTextColors = {
  scolaire: "text-blue-400",
  personnel: "text-purple-400",
};
---

<BaseLayout>
  <article class="mx-auto max-w-5xl px-4 py-16 sm:px-6 lg:px-8">
    <!-- En-tête du projet -->
    <header class="mb-16">
      <!-- Breadcrumb -->
      <nav class="mb-6 flex items-center gap-2 text-sm text-gray-400">
        <a href="/" class="transition-colors hover:text-white">Accueil</a>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
          ></path>
        </svg>
        <a href="/projects" class="transition-colors hover:text-white">Projets</a>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
          ></path>
        </svg>
        <span class="text-gray-500">{project.data.title}</span>
      </nav>

      <!-- Catégorie badge -->
      <div class="mb-6">
        <span
          class={`inline-flex items-center gap-2 px-4 py-2 text-sm font-semibold rounded-full border backdrop-blur-md bg-gradient-to-r ${categoryGradients[project.data.category]}`}
        >
          <span
            class={`w-2 h-2 rounded-full ${categoryTextColors[project.data.category].replace("text-", "bg-")}`}
          ></span>
          <span class={categoryTextColors[project.data.category]}>
            {categoryLabels[project.data.category]}
          </span>
        </span>
      </div>

      <!-- Titre principal -->
      <h1
        class="mb-6 bg-gradient-to-r from-white via-gray-100 to-gray-400 bg-clip-text text-5xl leading-tight font-bold text-transparent md:text-6xl lg:text-7xl"
      >
        {project.data.title}
      </h1>

      <!-- Description -->
      <p class="mb-8 max-w-3xl text-xl leading-relaxed text-gray-400 md:text-2xl">
        {project.data.description}
      </p>

      <!-- Métadonnées -->
      <div class="mb-8 flex flex-wrap items-center gap-6">
        <div class="flex items-center gap-2 text-sm text-gray-500">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
          <time datetime={project.data.date.toISOString()}>
            {
              project.data.date.toLocaleDateString("fr-FR", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })
            }
          </time>
        </div>
        <div class="flex items-center gap-2 text-sm text-gray-500">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
            ></path>
          </svg>
          <span>{project.data.technologies.length} technologies</span>
        </div>
      </div>

      <!-- Technologies -->
      <div class="mb-10 flex flex-wrap gap-3">
        {
          project.data.technologies.map((tech) => (
            <span class="rounded-full border border-white/10 bg-white/5 px-4 py-2 text-sm font-medium text-gray-300 backdrop-blur-sm transition-colors hover:bg-white/10">
              {tech}
            </span>
          ))
        }
      </div>

      <!-- Liens d'action -->
      <div class="flex flex-wrap gap-4">
        {
          project.data.github && (
            <Link href={project.data.github} target="_blank" variant="secondary" size="md">
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  fill-rule="evenodd"
                  d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                  clip-rule="evenodd"
                />
              </svg>
              Voir sur GitHub
            </Link>
          )
        }
        {
          project.data.demo && (
            <Link href={project.data.demo} target="_blank" variant="primary" size="md">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                />
              </svg>
              Voir la démo
            </Link>
          )
        }
      </div>
    </header>

    <!-- Image du projet -->
    {
      project.data.image && (
        <div class="mb-16 overflow-hidden rounded-2xl border border-white/10 shadow-2xl">
          <img src={project.data.image} alt={project.data.title} class="h-auto w-full" />
        </div>
      )
    }

    <!-- Contenu Markdown -->
    <div class="markdown-content space-y-6">
      <Content />
    </div>

    <!-- Bouton retour -->
    <div>
      <Link href="/projects" variant="ghost" size="md">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Retour aux projets
      </Link>
    </div>
  </article>
</BaseLayout>
