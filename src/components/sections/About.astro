---
import { aboutConfig } from "@config/about";
import Link from "@ui/Link.astro";
import Title from "@ui/Title.astro";
---

<section id="about" data-about-section class="relative px-8 py-20">
  <div class="container mx-auto max-w-6xl">
    <!-- Section Title -->
    <div data-about-header>
      <Title highlight="À propos" subtitle="Qui suis-je ?" />
    </div>

    <!-- Content Grid -->
    <div class="grid gap-12 lg:grid-cols-2 lg:gap-16">
      <!-- Left Column - Profile Info -->
      <div data-about-profile class="space-y-8">
        <!-- Name & Title -->
        <div class="rounded-2xl border border-white/10 bg-white/5 p-8 backdrop-blur-sm">
          <div class="mb-6">
            <h3 class="mb-2 text-3xl font-bold text-white md:text-4xl">
              {aboutConfig.firstName}
              <span
                class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent"
              >
                {aboutConfig.lastName}
              </span>
            </h3>
            <p class="text-xl text-gray-400">{aboutConfig.title}</p>
          </div>

          <!-- Highlights Grid -->
          <div class="grid grid-cols-2 gap-4">
            {
              aboutConfig.highlights.map((highlight) => (
                <div class="rounded-xl border border-white/10 bg-white/5 p-4">
                  <div class="mb-2 text-2xl">{highlight.icon}</div>
                  <div class="text-xs text-gray-500">{highlight.label}</div>
                  <div class="font-semibold text-white">{highlight.value}</div>
                </div>
              ))
            }
          </div>
        </div>

        <!-- CV Download Section -->
        {
          aboutConfig.cv.available && (
            <div
              data-about-cv
              class="rounded-2xl border border-white/10 bg-white/5 p-8 backdrop-blur-sm"
            >
              <h4 class="mb-4 text-xl font-bold text-white">Curriculum Vitae</h4>
              <p class="mb-6 text-sm text-gray-400">
                Téléchargez mon CV pour en savoir plus sur mon parcours et mes expériences.
              </p>
              <div class="flex flex-col gap-3 sm:flex-row">
                <Link variant="primary" href={aboutConfig.cv.url || "#"} download>
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    />
                  </svg>
                  Télécharger
                </Link>
                <Link variant="secondary" href={aboutConfig.cv.url || "#"} target="_blank">
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                    />
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                    />
                  </svg>
                  Prévisualiser
                </Link>
              </div>
            </div>
          )
        }
      </div>

      <!-- Right Column - Description -->
      <div data-about-description class="space-y-6">
        {
          aboutConfig.description.map((paragraph, index) => (
            <div
              data-about-paragraph
              data-paragraph-index={index}
              class="rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur-sm"
            >
              <p class="leading-relaxed text-gray-300">{paragraph}</p>
            </div>
          ))
        }

        <!-- Contact Info -->
        <div
          data-about-contact
          class="rounded-2xl border border-white/10 bg-gradient-to-br from-blue-500/10 to-purple-500/10 p-6 backdrop-blur-sm"
        >
          <h4 class="mb-4 text-lg font-bold text-white">Me contacter</h4>
          <div class="flex items-center gap-3 text-gray-300">
            <svg
              class="h-5 w-5 text-blue-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <a href={`mailto:${aboutConfig.email}`} class="transition-colors hover:text-blue-400">
              {aboutConfig.email}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { initAboutAnimations } from "@animations/about";

  document.addEventListener("astro:page-load", () => {
    initAboutAnimations();
  });
</script>
