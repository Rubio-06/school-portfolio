---
import { schoolConfig } from "@config/school";
import Title from "@ui/Title.astro";

const { name, description, diploma, options } = schoolConfig;
---

<section id="school" class="school-section relative min-h-screen px-6 py-20" data-section="school">
  <div class="container mx-auto max-w-7xl">
    <!-- Section Header -->
    <Title highlight="École" subtitle={`${name} - ${description}`} />

    <!-- Diploma Section -->
    <div class="diploma-card mb-16">
      <div
        class="rounded-2xl border border-white/10 bg-white/5 p-8 backdrop-blur-sm transition-all duration-300 hover:border-white/20 hover:bg-white/10"
      >
        <div class="mb-6 flex items-center gap-6">
          <div
            class="flex h-20 w-20 shrink-0 items-center justify-center rounded-2xl bg-gradient-to-br from-blue-500 to-purple-500 p-4 shadow-lg shadow-blue-500/30"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="h-10 w-10 text-white"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4.26 10.147a60.438 60.438 0 0 0-.491 6.347A48.62 48.62 0 0 1 12 20.904a48.62 48.62 0 0 1 8.232-4.41 60.46 60.46 0 0 0-.491-6.347m-15.482 0a50.636 50.636 0 0 0-2.658-.813A59.906 59.906 0 0 1 12 3.493a59.903 59.903 0 0 1 10.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0 1 12 13.489a50.702 50.702 0 0 1 7.74-3.342M6.75 15a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm0 0v-3.675A55.378 55.378 0 0 1 12 8.443m-7.007 11.55A5.981 5.981 0 0 0 6.75 15.75v-1.5"
              ></path>
            </svg>
          </div>
          <div>
            <h3 class="text-3xl font-bold text-white">{diploma.name}</h3>
            <p class="text-xl text-gray-300">{diploma.fullName}</p>
          </div>
        </div>
        <p class="mb-6 text-lg leading-relaxed text-gray-400">
          {diploma.description}
        </p>
        <div class="flex flex-wrap gap-4">
          <div class="rounded-full border border-blue-400/30 bg-blue-500/10 px-6 py-2">
            <span class="text-sm font-semibold text-blue-400">Durée : {diploma.duration}</span>
          </div>
          <div class="rounded-full border border-purple-400/30 bg-purple-500/10 px-6 py-2">
            <span class="text-sm font-semibold text-purple-400">Niveau : {diploma.level}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Options Grid -->
    <div class="grid gap-8 md:grid-cols-2">
      {
        options.map((option) => {
          const isServer = option.icon === "server";
          const iconColor = isServer ? "from-cyan-500 to-blue-500" : "from-purple-500 to-pink-500";
          const shadowColor = isServer ? "shadow-cyan-500/30" : "shadow-purple-500/30";

          return (
            <div class="option-card group">
              <div class="h-full rounded-2xl border border-white/10 bg-white/5 p-8 backdrop-blur-sm transition-all duration-300 hover:border-white/20 hover:bg-white/10 hover:shadow-xl hover:shadow-white/5">
                <div class="mb-6 flex items-center gap-6">
                  <div
                    class={`flex h-16 w-16 shrink-0 items-center justify-center rounded-2xl bg-gradient-to-br ${iconColor} p-3 shadow-lg ${shadowColor} transition-all duration-300 group-hover:scale-110`}
                  >
                    {isServer ? (
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="h-8 w-8 text-white"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M5.25 14.25h13.5m-13.5 0a3 3 0 0 1-3-3m3 3a3 3 0 1 0 0 6h13.5a3 3 0 1 0 0-6m-16.5-3a3 3 0 0 1 3-3h13.5a3 3 0 0 1 3 3m-19.5 0a4.5 4.5 0 0 1 .9-2.7L5.737 5.1a3.375 3.375 0 0 1 2.7-1.35h7.126c1.062 0 2.062.5 2.7 1.35l2.587 3.45a4.5 4.5 0 0 1 .9 2.7m0 0a3 3 0 0 1-3 3m0 3h.008v.008h-.008v-.008Zm0-6h.008v.008h-.008v-.008Zm-3 6h.008v.008h-.008v-.008Zm0-6h.008v.008h-.008v-.008Z"
                        />
                      </svg>
                    ) : (
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="h-8 w-8 text-white"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5"
                        />
                      </svg>
                    )}
                  </div>
                  <div>
                    <h3 class="text-2xl font-bold text-white">{option.name}</h3>
                    <p class="text-sm font-semibold text-gray-300">{option.title}</p>
                  </div>
                </div>

                <p class="mb-6 text-gray-400">{option.description}</p>

                <div>
                  <h4 class="mb-3 font-semibold text-white">Débouchés :</h4>
                  <div class="flex flex-wrap gap-2">
                    {option.careers.map((career) => (
                      <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-gray-300 transition-colors duration-200 hover:border-white/20 hover:bg-white/10">
                        {career}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>

<script>
  import { initSchoolAnimations } from "@animations/school";

  document.addEventListener("DOMContentLoaded", () => {
    initSchoolAnimations();
  });
</script>

<style>
  .school-section {
    position: relative;
    z-index: 1;
  }
</style>
