---
interface TitleProps {
  id?: string;
  highlight: string;
  before?: string;
  after?: string;
  subtitle?: string;
  class?: string;
}

const {
  id,
  highlight,
  before = "",
  after = "",
  subtitle,
  class: className = "",
} = Astro.props as TitleProps;
---

<div class={`mb-16 text-center ${className}`}>
  <h2 id={id} class="section-title mb-4 text-4xl font-bold text-white md:text-5xl lg:text-6xl">
    {before && <span>{before} </span>}
    <span
      class="bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent"
    >
      {highlight}
    </span>
    {after && <span> {after}</span>}
  </h2>
  {
    subtitle && (
      <div class="section-subtitle mx-auto max-w-3xl">
        <p class="text-lg text-gray-400">{subtitle}</p>
      </div>
    )
  }
</div>
