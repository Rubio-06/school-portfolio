---
import { type CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;

const categoryLabels = {
  scolaire: "Scolaire",
  personnel: "Personnel",
};

const categoryColors = {
  scolaire: "from-blue-500/20 to-blue-600/20 border-blue-500/30",
  personnel: "from-purple-500/20 to-purple-600/20 border-purple-500/30",
};

const categoryTextColors = {
  scolaire: "text-blue-400",
  personnel: "text-purple-400",
};
---

<article
  class="project-card group relative flex h-full flex-col overflow-hidden rounded-2xl border border-white/10 bg-gradient-to-br from-white/5 to-white/[0.02] backdrop-blur-sm transition-all duration-500 hover:scale-[1.02] hover:border-white/20"
>
  <a href={`/projects/${project.slug}`} class="flex h-full flex-col">
    <!-- Image -->
    {
      project.data.image ? (
        <div class="relative aspect-video overflow-hidden">
          <img
            src={project.data.image}
            alt={project.data.title}
            class="h-full w-full object-cover transition-all duration-500 group-hover:scale-110 group-hover:brightness-75"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-60 transition-opacity duration-500 group-hover:opacity-90" />
          <!-- Catégorie sur l'image -->
          <div class="absolute left-4 top-4">
            <span
              class={`inline-flex rounded-full border px-3 py-1.5 text-xs font-semibold backdrop-blur-md bg-gradient-to-r ${categoryColors[project.data.category]}`}
            >
              <span class={categoryTextColors[project.data.category]}>
                {categoryLabels[project.data.category]}
              </span>
            </span>
          </div>
        </div>
      ) : (
        <div class="relative aspect-video overflow-hidden bg-gradient-to-br from-gray-800 to-gray-900">
          <div class="absolute inset-0 flex items-center justify-center">
            <svg class="h-16 w-16 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
              />
            </svg>
          </div>
          <!-- Catégorie sur le placeholder -->
          <div class="absolute left-4 top-4">
            <span
              class={`inline-flex rounded-full border px-3 py-1.5 text-xs font-semibold backdrop-blur-md bg-gradient-to-r ${categoryColors[project.data.category]}`}
            >
              <span class={categoryTextColors[project.data.category]}>
                {categoryLabels[project.data.category]}
              </span>
            </span>
          </div>
        </div>
      )
    }

    <!-- Contenu -->
    <div class="flex flex-1 flex-col space-y-4 p-6">
      <!-- Titre -->
      <h3
        class="text-xl font-bold text-white transition-all duration-300 group-hover:bg-gradient-to-r group-hover:from-blue-400 group-hover:to-purple-400 group-hover:bg-clip-text group-hover:text-transparent"
      >
        {project.data.title}
      </h3>

      <!-- Description -->
      <p class="line-clamp-3 text-sm leading-relaxed text-gray-400">
        {project.data.description}
      </p>

      <!-- Technologies -->
      <div class="flex flex-wrap gap-2">
        {
          project.data.technologies.slice(0, 4).map((tech) => (
            <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs font-medium text-gray-300 backdrop-blur-sm transition-colors hover:bg-white/10">
              {tech}
            </span>
          ))
        }
        {
          project.data.technologies.length > 4 && (
            <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs font-medium text-gray-500 backdrop-blur-sm">
              +{project.data.technologies.length - 4}
            </span>
          )
        }
      </div>

      <!-- Footer -->
      <div class="mt-auto flex items-center justify-between border-t border-white/10 pt-4">
        <time
          class="flex items-center gap-2 text-xs text-gray-500"
          datetime={project.data.date.toISOString()}
        >
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            />
          </svg>
          {project.data.date.toLocaleDateString("fr-FR", { year: "numeric", month: "short" })}
        </time>

        <div class="flex items-center gap-2">
          {
            project.data.github && (
              <span
                class="rounded-lg bg-white/5 p-2 text-gray-400 transition-all hover:bg-white/10 hover:text-white"
                title="GitHub disponible"
              >
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    fill-rule="evenodd"
                    d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                    clip-rule="evenodd"
                  />
                </svg>
              </span>
            )
          }
          {
            project.data.demo && (
              <span
                class="rounded-lg bg-white/5 p-2 text-gray-400 transition-all hover:bg-blue-500/20 hover:text-blue-400"
                title="Demo disponible"
              >
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                  />
                </svg>
              </span>
            )
          }
          <span class="text-gray-600 transition-colors group-hover:text-blue-400">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"
              />
            </svg>
          </span>
        </div>
      </div>
    </div>
  </a>
</article>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>