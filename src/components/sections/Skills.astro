---
import { skillsConfig } from "@config/skills";
import { Image } from "astro:assets";
import Title from "@ui/Title.astro";
import Link from "@ui/Link.astro";

// Calculer l'expérience pour chaque skill
const currentYear = 2025;
const skillsWithExperience = skillsConfig.skills.map((skill) => {
  const endYear = skill.endYear || currentYear;
  const experience = endYear - skill.startYear;
  return { ...skill, experience };
});

// Grouper les skills par catégorie
const groupedSkills = skillsConfig.categories.map((category) => ({
  ...category,
  skills: skillsWithExperience.filter((skill) => skill.category === category.id),
}));
---

<section id="skills" data-skills-section class="relative px-8 py-20">
  <div class="container mx-auto max-w-7xl">
    <!-- Section Title -->
    <div data-skills-header>
      <Title highlight="Compétences" subtitle="Technologies et outils que je maîtrise" />
    </div>

    <!-- Skills Table Download Section -->
    {
      skillsConfig.table?.available && (
        <div
          data-skills-table
          class="mb-12 rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur-sm md:p-8"
        >
          <div class="flex flex-col items-start gap-6 md:flex-row md:items-center md:justify-between">
            <div class="flex-1">
              <h4 class="mb-2 text-xl font-bold text-white">Tableau de compétences</h4>
              <p class="text-sm text-gray-400">
                Consultez le tableau détaillé de toutes mes compétences techniques avec leurs
                niveaux de maîtrise.
              </p>
            </div>
            <div class="flex w-full flex-col gap-3 sm:flex-row md:w-auto">
              <Link variant="primary" href={skillsConfig.table.url || "#"} download>
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                  />
                </svg>
                Télécharger
              </Link>
              <Link variant="secondary" href={skillsConfig.table.url || "#"} target="_blank">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                  />
                </svg>
                Voir
              </Link>
            </div>
          </div>
        </div>
      )
    }

    <!-- Skills Grid -->
    <div class="space-y-16">
      {
        groupedSkills.map((category, categoryIndex) => (
          <div data-skills-category data-category-index={categoryIndex} class="skill-category">
            {/* Category Header */}
            <div class="mb-8 flex items-center gap-4">
              <div class={`h-1 w-12 rounded-full bg-gradient-to-r ${category.color}`} />
              <h3 class="text-2xl font-bold text-white md:text-3xl">{category.label}</h3>
              <div
                class={`h-1 flex-1 rounded-full bg-gradient-to-r ${category.color} opacity-20`}
              />
            </div>

            {/* Skills Grid */}
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
              {category.skills.map((skill, skillIndex) => (
                <div
                  data-skill-card
                  data-skill-index={skillIndex}
                  class="skill-card group relative overflow-hidden rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur-sm transition-all duration-300 hover:border-white/20 hover:bg-white/10"
                >
                  {/* Gradient overlay on hover */}
                  <div
                    class={`absolute inset-0 bg-gradient-to-br ${category.color} opacity-0 transition-opacity duration-300 group-hover:opacity-10`}
                  />

                  <div class="relative z-10">
                    {/* Icon */}
                    <div class="mb-4 flex items-center justify-between">
                      <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-white/10 backdrop-blur-sm">
                        <Image
                          src={skill.icon}
                          alt={skill.name}
                          width={32}
                          height={32}
                          loading="lazy"
                          class="h-8 w-8 object-contain"
                        />
                      </div>
                      <span class="text-sm font-medium text-gray-400">
                        {skill.experience} an{skill.experience > 1 ? "s" : ""}
                      </span>
                    </div>

                    {/* Skill Name */}
                    <h4 class="mb-2 text-xl font-bold text-white">{skill.name}</h4>

                    {/* Description */}
                    <p class="mb-4 text-sm text-gray-400">{skill.description}</p>

                    {/* Level Bar */}
                    <div class="space-y-2">
                      <div class="flex justify-between text-xs text-gray-500">
                        <span>Niveau</span>
                        <span>{skill.level}/5</span>
                      </div>
                      <div class="h-2 overflow-hidden rounded-full bg-white/10">
                        <div
                          data-skill-level
                          class={`h-full rounded-full bg-gradient-to-r ${category.color} transition-all duration-1000`}
                          style={`width: 0%`}
                          data-target-width={`${(skill.level / 5) * 100}%`}
                        />
                      </div>
                    </div>

                    {/* Timeline */}
                    <div class="mt-4 flex items-center gap-2 text-xs text-gray-500">
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                        />
                      </svg>
                      <span>
                        {skill.startYear}
                        {skill.endYear && skill.endYear !== currentYear
                          ? ` - ${skill.endYear}`
                          : " - Aujourd'hui"}
                      </span>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<script>
  import { initSkillsAnimations } from "@animations/skills";

  document.addEventListener("astro:page-load", () => {
    initSkillsAnimations();
  });
</script>
