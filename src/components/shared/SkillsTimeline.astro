---
import type { Skill } from "@/types/skills";
import { skillsConfig } from "@config/skills";

const currentYear = new Date().getFullYear();

// Grouper les skills par année de début
const skillsByYear = skillsConfig.skills.reduce(
  (acc, skill) => {
    const years = [];
    for (let year = skill.startYear; year <= (skill.endYear || currentYear); year++) {
      if (!acc[year]) {
        acc[year] = [];
      }
      if (year === skill.startYear) {
        acc[year].push(skill);
      }
    }
    return acc;
  },
  {} as Record<number, Skill[]>
);

const years = Object.keys(skillsByYear)
  .map(Number)
  .sort((a, b) => b - a); // Du plus récent au plus ancien
---

<section class="relative py-20">
  <div class="relative z-10 container mx-auto px-8">
    <!-- Header -->
    <div class="mb-16 text-center">
      <h2 data-skills-title class="mb-4 text-4xl font-bold text-white md:text-5xl">
        Mon Parcours Technique
      </h2>
      <p data-skills-subtitle class="text-xl text-gray-400">
        Évolution de mes compétences au fil des années
      </p>
    </div>

    <!-- Timeline -->
    <div class="relative mx-auto max-w-5xl">
      <!-- Ligne verticale centrale -->
      <div
        class="absolute top-0 left-1/2 h-full w-1 -translate-x-1/2 bg-gradient-to-b from-blue-500 via-purple-500 to-pink-500"
        data-timeline-line
      >
      </div>

      <!-- Timeline items -->
      <div class="space-y-16">
        {
          years.map((year, index) => {
            const yearSkills = skillsByYear[year];
            const isLeft = index % 2 === 0;

            return (
              <div
                data-timeline-item
                class={`relative flex items-center ${isLeft ? "flex-row" : "flex-row-reverse"}`}
              >
                {/* Content side */}
                <div class={`w-5/12 ${isLeft ? "pr-8 text-right" : "pl-8 text-left"}`}>
                  <div class="group relative rounded-2xl border border-white/10 bg-slate-800/50 p-6 backdrop-blur-sm transition-all duration-300 hover:border-white/30 hover:bg-slate-800/70 hover:shadow-xl hover:shadow-blue-500/20">
                    {/* Année */}
                    <div
                      class={`mb-4 flex items-center gap-2 ${isLeft ? "justify-end" : "justify-start"}`}
                    >
                      <div class="flex h-10 w-10 items-center justify-center rounded-full bg-gradient-to-br from-blue-500 to-purple-500 font-bold text-white shadow-lg">
                        {year.toString().slice(-2)}
                      </div>
                      <h3 class="text-2xl font-bold text-white">{year}</h3>
                    </div>

                    {/* Skills de cette année */}
                    <div class="space-y-3">
                      {yearSkills.map((skill) => {
                        const skillCategory = skillsConfig.categories.find(
                          (cat) => cat.id === skill.category
                        );
                        const duration = (skill.endYear || currentYear) - skill.startYear + 1;
                        const isActive = !skill.endYear;

                        return (
                          <div class="group/skill relative overflow-hidden rounded-xl border border-white/10 bg-slate-900/50 p-4 backdrop-blur-sm transition-all duration-300 hover:border-white/20 hover:bg-slate-900/70">
                            <div class="flex items-center gap-4">
                              {/* Icon */}
                              <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-lg bg-white/5 transition-all duration-300 group-hover/skill:scale-110 group-hover/skill:bg-white/10">
                                <img src={skill.icon} alt={skill.name} class="h-8 w-8" />
                              </div>

                              {/* Info */}
                              <div class="flex-1">
                                <div class="flex items-center gap-2">
                                  <h4
                                    class={`bg-gradient-to-r text-lg font-bold ${skillCategory?.color} bg-clip-text text-transparent`}
                                  >
                                    {skill.name}
                                  </h4>
                                  {isActive && (
                                    <span class="rounded-full bg-green-500/20 px-2 py-0.5 text-xs font-medium text-green-400">
                                      Actif
                                    </span>
                                  )}
                                </div>
                                <p class="text-sm text-gray-400">{skill.description}</p>
                                <div class="mt-2 flex items-center gap-4 text-xs text-gray-500">
                                  <span>
                                    {skill.startYear}
                                    {skill.endYear ? ` - ${skill.endYear}` : " - Maintenant"}
                                  </span>
                                  <span>•</span>
                                  <span>
                                    {duration} an{duration > 1 ? "s" : ""}
                                  </span>
                                  <span>•</span>
                                  <div class="flex gap-0.5">
                                    {Array.from({ length: 5 }).map((_, i) => (
                                      <div
                                        class={`h-1.5 w-1.5 rounded-full ${i < skill.level ? `bg-gradient-to-r ${skillCategory?.color}` : "bg-white/20"}`}
                                      />
                                    ))}
                                  </div>
                                </div>
                              </div>
                            </div>

                            {/* Hover effect bar */}
                            <div
                              class={`absolute bottom-0 left-0 h-1 w-0 bg-gradient-to-r ${skillCategory?.color} transition-all duration-300 group-hover/skill:w-full`}
                            />
                          </div>
                        );
                      })}
                    </div>
                  </div>
                </div>

                {/* Center dot */}
                <div class="absolute left-1/2 z-10 flex h-6 w-6 -translate-x-1/2 items-center justify-center">
                  <div class="h-4 w-4 animate-pulse rounded-full bg-gradient-to-br from-blue-400 to-purple-500 shadow-lg shadow-blue-500/50" />
                </div>

                {/* Empty space on other side */}
                <div class="w-5/12" />
              </div>
            );
          })
        }
      </div>

      {/* Legend */}
      <div class="mt-16 flex flex-wrap justify-center gap-4">
        {
          skillsConfig.categories.map((category) => (
            <div class="flex items-center gap-2 rounded-full border border-white/10 bg-slate-800/50 px-4 py-2 backdrop-blur-sm">
              <div class={`h-3 w-3 rounded-full bg-gradient-to-r ${category.color}`} />
              <span class="text-sm text-gray-300">{category.label}</span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Animation du titre
  gsap.from("[data-skills-title]", {
    scrollTrigger: {
      trigger: "[data-skills-title]",
      start: "top 80%",
    },
    y: 50,
    opacity: 0,
    duration: 0.8,
    ease: "power3.out",
  });

  gsap.from("[data-skills-subtitle]", {
    scrollTrigger: {
      trigger: "[data-skills-subtitle]",
      start: "top 80%",
    },
    y: 30,
    opacity: 0,
    duration: 0.8,
    delay: 0.2,
    ease: "power3.out",
  });

  // Animation de la ligne centrale
  gsap.from("[data-timeline-line]", {
    scrollTrigger: {
      trigger: "[data-timeline-line]",
      start: "top 80%",
      end: "bottom 20%",
      scrub: 1,
    },
    scaleY: 0,
    transformOrigin: "top",
  });

  // Animation des items de timeline
  const timelineItems = gsap.utils.toArray("[data-timeline-item]");

  timelineItems.forEach((item: any, index) => {
    gsap.from(item, {
      scrollTrigger: {
        trigger: item,
        start: "top 85%",
      },
      x: index % 2 === 0 ? -100 : 100,
      opacity: 0,
      duration: 0.8,
      ease: "power3.out",
    });
  });
</script>

<style>
  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
